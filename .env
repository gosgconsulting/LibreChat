# Main Application Configuration
HOST=0.0.0.0
PORT=3080
APP_TITLE=LibreChat
DEBUG_LOGGING=true
DEBUG_CONSOLE=false
DEBUG_PLUGINS=true
NO_INDEX=true

# JWT Configuration
# Replace with your actual JWT secret
JWT_SECRET=your_jwt_secret
# Replace with your actual JWT refresh secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
SESSION_EXPIRY=1000 * 60 * 15
REFRESH_TOKEN_EXPIRY=(1000 * 60 * 60 * 24) * 7

# MongoDB Configuration
MONGO_URI=mongodb://${MONGOUSER}:${MONGOPASSWORD}@${RAILWAY_PRIVATE_DOMAIN}:${MONGOPORT}
MONGOHOST=${RAILWAY_PRIVATE_DOMAIN}
MONGOPORT=27017
MONGOUSER=mongo
# Replace with your actual MongoDB password
MONGOPASSWORD=your_mongo_password

# Meilisearch Configuration
SEARCH=true
MEILI_HOST=http://${RAILWAY_PRIVATE_DOMAIN}:7700
# Replace with your actual Meilisearch master key
MEILI_MASTER_KEY=your_meili_master_key
MEILI_NO_ANALYTICS=true

# RAG API Configuration
RAG_PORT=8000
RAG_API_URL=https://${RAILWAY_PUBLIC_DOMAIN}
EMBEDDINGS_PROVIDER=openai
# Replace with your actual OpenAI API key
OPENAI_API_KEY=your_openai_api_key

# AI Model API Keys
# Replace with your actual Anthropic API key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_KEY=user_provided
# Replace with your actual OpenRouter API key
OPENROUTER_API_KEY=your_openrouter_api_key
ANYSCALE_API_KEY=user_provided
FIREWORKS_API_KEY=user_provided
GROQ_API_KEY=user_provided
MISTRAL_API_KEY=user_provided
PERPLEXITY_API_KEY=user_provided
TOGETHERAI_API_KEY=user_provided
ASSISTANTS_API_KEY=user_provided

# Google Models
GOOGLE_MODELS=gemini-2.5-pro-preview-05-06,gemini-2.5-flash-preview-04-17,gemini-2.0-flash-001,gemini-2.0-flash-exp,gemini-2.0-flash-lite-001,gemini-1.5-pro-002,gemini-1.5-flash-002

# Endpoints Configuration
ENDPOINTS=openAI,agents,assistants,azureOpenAI,google,anthropic,custom

# Authentication Configuration
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false

# Security and Rate Limiting
OPENAI_MODERATION=false
BAN_VIOLATIONS=true
BAN_DURATION=1000 * 60 * 60 * 2
BAN_INTERVAL=20
LOGIN_VIOLATION_SCORE=1
REGISTRATION_VIOLATION_SCORE=1
CONCURRENT_VIOLATION_SCORE=1
MESSAGE_VIOLATION_SCORE=1
NON_BROWSER_VIOLATION_SCORE=20
LOGIN_MAX=7
LOGIN_WINDOW=5
REGISTER_MAX=5
REGISTER_WINDOW=60
LIMIT_CONCURRENT_MESSAGES=true
CONCURRENT_MESSAGE_MAX=2
LIMIT_MESSAGE_IP=true
MESSAGE_IP_MAX=40
MESSAGE_IP_WINDOW=1
LIMIT_MESSAGE_USER=false
CHECK_BALANCE=false

# Encryption Keys
# Replace with your actual credentials key
CREDS_KEY=your_creds_key
# Replace with your actual credentials IV
CREDS_IV=your_creds_iv

# Title Generation
TITLE_CONVO=true
OPENAI_TITLE_MODEL=gpt-3.5-turbo
